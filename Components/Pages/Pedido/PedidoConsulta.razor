@page "/pedidos"

@inject PedidoDAO pedidoDAO;

<PageTitle>Pedidos</PageTitle>


<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Pedidos</h1>

<div class="blazor-canva-dropdown-container mb-6">
    <div class="blazor-canva-dropdown-title">
        selecionar cliente:
    </div>
    <select class="blazor-canva-dropdown-select" @onchange="FiltrarPedidos" value="@clienteSelecionado">
        @foreach (var cliente in clientes)
        {
            <option value="@cliente">@cliente</option>
        }
    </select>
</div>

<table class="table w-full border-collapse">
        <thead class="bg-brown-600 text-white uppercase tracking-wider text-sm">
            <tr>
                <th class="p-2 text-left">Id</th>
                <th class="p-2 text-left">Nome do cliente</th>
                <th class="p-2 text-left">Forma de pagamento</th>
                <th class="p-2 text-left">Numero do pedido</th>
                <th class="p-2 text-left">Status</th>
                <th class="p-2 text-right">Total</th>
            </tr>
        </thead>
    <tbody>
        @{
            int contador = 1;

            @foreach (var pedido in listaPedidos)
            {
                <tr class="hover:bg-amber-200 transition duration-150 ease-in-out @(contador % 2 == 0 ? "bg-amber-50" : "bg-amber-100")">
                    <td class="p-2">@pedido.Id</td>
                    <td class="p-2">@pedido.NomeCliente</td>
                    <td class="p-2">@pedido.NumeroPedido</td>
                    <td class="p-2">@pedido.Status</td>

                    <td class="p-2">
                        @{
                            string statusText = pedido.FormaPagamento;
                            string statusClass = statusText switch
                            {
                                "Pendente" => "bg-yellow-300 text-yellow-900",
                                "Pronto" => "bg-green-300 text-green-900",
                                _ => "bg-gray-400 text-gray-800"
                            };
                        }
                        <span class="inline-block px-1 py-0.5 text-xs font-semibold rounded-full @statusClass">
                            @statusText
                        </span>
                    </td>

                    <td class="p-2 text-right font-bold text-red-700">@pedido.Total</td>
                </tr>

                contador++;
            }
        }
    </tbody>
</table>

@code {
    private List<Pedido> listaPedidos = new();

    // Adicione a lista de clientes e o valor selecionado
    private List<string> clientes = new List<string> { "Todos os Clientes", "Madalena", "Ana Souza", "Outro Cliente" };
    private string clienteSelecionado = "Todos os Clientes"; // Valor inicial

    protected override void OnInitialized()
    {
        CarregarDados();
    }

    private void CarregarDados()
    {
        // 1. CHAMA O DAO CORRIGIDO: Carrega TODOS os pedidos do banco de dados.
        // É vital que o DAO retorne a lista completa aqui.
        var todosPedidos = pedidoDAO.listarTodos();

        // 2. Aplica a lógica de filtro
        if (clienteSelecionado != "Todos os Clientes")
        {
            // Filtra e atribui o resultado filtrado à lista exibida
            listaPedidos = todosPedidos
                // Usa StringComparison.OrdinalIgnoreCase para evitar problemas de maiúsculas/minúsculas
                .Where(p => p.NomeCliente.Equals(clienteSelecionado, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
        else
        {
            // Se "Todos os Clientes" estiver selecionado, exibe a lista completa
            listaPedidos = todosPedidos;
        }

        // 3. Força a atualização da UI (se você não usou Interactive Render Mode)
        StateHasChanged();
    }

    private void FiltrarPedidos(ChangeEventArgs e)
    {
        clienteSelecionado = e.Value?.ToString() ?? "Todos os Clientes";
        CarregarDados(); // Chama o método que carrega e filtra
    }
}
