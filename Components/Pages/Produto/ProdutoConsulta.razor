@page "/produtos"

@inject ProdutoDAO produtoDAO;
@inject NavigationManager NavigationManager
<PageTitle>Produtos</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        @{
            int contador = 1;

            @foreach (var produto in listaProdutos)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Nome 1</td>
                    <td>@produto.Quantidade</td>
                    <td>@produto.Valor</td>
                </tr>

                contador++;
            }
        }
    </tbody>

</table>
<a href="/cadastrar_produto"
   class="flex items-center gap-3 p-2 rounded-lg border border-indigo-600 hover:bg-indigo-100 dark:hover:bg-indigo-900 text-gray-700 dark:text-gray-200">

    <!-- Ícone aqui -->
    <svg xmlns="sinal.png" class="w-5 h-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>

    <button @onclick="IrParaNovoProduto">ADICIONAR PRODUTO</button>

    @code {
        void IrParaNovoProduto()
        {
            NavigationManager.NavigateTo("/produtos/novo");
        }
    }

</a>




@code {

    private List<Produto> listaProdutos = new();

    protected override void OnInitialized()
    {
        CarregarDados();
    }

    private void CarregarDados()
    {
        listaProdutos = produtoDAO.listarTodos();
    }

}


