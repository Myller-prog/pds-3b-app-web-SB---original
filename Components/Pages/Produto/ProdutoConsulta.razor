@page "/produto"

@inject ProdutoDAO produtoDAO;

<PageTitle>Produto</PageTitle>


<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Produto</h1>

<a href="/produtos/novo"
   class="btn btn-primary">
     Cadastrar Produtos
</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>descricao</th>
            <th>quantidade</th>
            <th>valor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @{
            int contador = 1;

            @foreach (var produto in listarProduto)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Nome</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.Quantidade</td>
                    <td>@produto.Valor</td>

                    <td> 
                        <a href="/produtos/@produto.Id/editar"  class="bts bts-sm bts-primary mr-2">
                                <i class="fas fa-edit"></i> atualizar
                        </a>
                        <button class="btn btn-danger btn-sm" @onclick="() => OnExcluir(produto.Id)">Excluir</button>

                    </td>
                </tr>
                
                contador++;
            }

        }
    </tbody>
   
</table>

@code {
    private List<Produto> listarProduto = new();

    protected override void OnInitialized()
    {
        Carregar();
    }

    private void Carregar()
    {
        var dados = produtoDAO.listarTodos();
        listarProduto = new List<Produto>(dados);
    }

    private void OnExcluir(int id)
    {
        bool sucesso = produtoDAO.Excluir(id);
        if (!sucesso)
        {
            // opcional: mostrar mensagem de erro ou log
            return;
        }

        Carregar();
        StateHasChanged();
    }
}

