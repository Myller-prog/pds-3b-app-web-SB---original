@page "/produtos/novo"
@rendermode InteractiveServer
@using AppWeb.Models;
@inject ProdutoDAO produtoDAO;
@inject NavigationManager Navigation;
@using AppWeb.Configs

<PageTitle>Produto - Novo</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Novo Produto</h1>
@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}


<div class="row">
    <div class="color: 7A5B4C background-color: #5d4037 border-radius: 8px">
        <EditForm Model="_novoProduto" OnSubmit="Salvar">
            <div class="nomepro">
                <label>Nome</label>
                <input @bind-value="_novoProduto!.Nome" type="text" class="form-control" name="nome"
                       placeholder="Informe o nome do produto" />
            </div>

            <div class="quantpro">
                <label>Quantidade</label>
                <input @bind-value="_novoProduto!.Quantidade" type="text" class="form-control" name="quantidade"
                       placeholder="Informe a quantidade de produto" />
            </div>

            <div class="precopro">
                <label>Preço</label>
                <input @bind-value="_novoProduto!.Valor" type="text" class="form-control" name="valor"
                       placeholder="Informe o preço do produto" />
            </div>

            <div class="descricaopro">
                <label>Descricão</label>
                <input @bind-value="_novoProduto!.Descricao" type="text" class="form-control" name="descricao"
                       placeholder="Informe a descricao do produto" />
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
            
            
        </EditForm>
    </div>
</div>

@code {

    private string? erro = null;
    [SupplyParameterFromForm]
    private Produto? _novoProduto { get; set; } = new Produto();

    private void Salvar()
    {
        var lista = new List<Produto>();
        try
        {
            if (_novoProduto.Nome is null || _novoProduto.Nome == "")
            {
                throw new Exception(message: "O campo nome é obrigatório");
            }
            produtoDAO.Atualizar(_novoProduto);
            listarProduto = produtoDAO.listarTodos();
            Navigation.NavigateTo(uri: "/produto");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }

        
    }

    
    private List<Produto> listarProduto = new();
    private List<Produto> CadastrarProduto = new();

    protected override void OnInitialized()
    {
        CarregarDados();
    }

    private void CarregarDados()
    {
        listarProduto = produtoDAO.listarTodos();
        CadastrarProduto = produtoDAO.cadastrarProdutos();
    }

}