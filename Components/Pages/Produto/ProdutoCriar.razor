@page "/produtoCriar"
<div class="blazor-card-list-container">

    <h1 class="titulo-principal-blazor">produtos</h1>
    <div class="tag-filtro-blazor">alimentos</div>

    <div class="lista-de-cards-blazor">
        @foreach (var produto in Produtos)
        {
            <div class="produto-card-linha">
                <div class="item-nome-blazor">@produto.Nome</div>

                <div class="item-quantidade-blazor">@produto.Quantidade</div>

                <button class="item-acao-blazor item-editar">editar</button>

                <button class="item-acao-blazor item-deletar">🗑️</button>
            </div>
        }
    </div>

    <button class="botao-adicionar-blazor">adicionar</button>
</div>

@code {
    // Simulação dos dados que vieram da tabela da esquerda
    public class Produto
    {
        public int Id { get; set; }
        public string Nome { get; set; } = string.Empty;
        public int Quantidade { get; set; }
        public decimal Valor { get; set; }
    }

    private List<Produto> Produtos = new List<Produto>
    {
        new Produto { Id = 1, Nome = "vatapá", Quantidade = 4, Valor = 15.00m },
        new Produto { Id = 2, Nome = "pão caseiro", Quantidade = 5, Valor = 5.00m },
        new Produto { Id = 3, Nome = "pão de queijo", Quantidade = 15, Valor = 1.50m },
        new Produto { Id = 4, Nome = "lasanha", Quantidade = 3, Valor = 35.00m },
        new Produto { Id = 5, Nome = "frango assado", Quantidade = 1, Valor = 28.00m }
    };
}