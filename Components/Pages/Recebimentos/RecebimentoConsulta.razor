@page "/pedidos"

@inject PedidoDAO pedidoDAO;

<PageTitle>Pedidos</PageTitle>


<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Pedidos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pedido</th>
            <th>Valor</th>
            <th>FormaPagamento</th>
            <th>Data e Hora</th>
            <th>Comprovante</th>
            <th>Cliente</th>
        </tr>
    </thead>
    <tbody>
        @{
            int contador = 1;

            @foreach (var pedido in listaPedidos)
            {
                <tr>
                    <td>@pedido.Id</td>
                    <td>@pedido.Pedido</td>
                    <td>@pedido.Valor</td>
                    <td>@pedido.FormaPagamento </td>
                    <td>@pedido.Comprovante</td>
                    <td>@pedido.Cliente</td>
                </tr>

                contador++;
            }
        }
    </tbody>
</table>

@code {
    private List<Pedido> listaPedidos = new();

    protected override void OnInitialized()
    {
        CarregarDados();
    }

    private void CarregarDados()
    {
        listaPedidos = pedidoDAO.listarTodos();
    }

}


