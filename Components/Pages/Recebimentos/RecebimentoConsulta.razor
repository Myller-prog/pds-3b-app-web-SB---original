@page "/Recebimentos"

@inject RecebimentoDAO recebimentoDAO;
@inject ClienteDAO clienteDAO;

<PageTitle>Recebimentos</PageTitle>


<div class="flex justify-center mb-4">
<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Recebimentos</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pedido</th>
            <th>Valor</th>
            <th>Forma de Pagamento</th>
            <th>Comprovante</th>
        </tr>
    </thead>
    <tbody>
        @{
            int contador = 1;

            @foreach (var recebimento in listaRecebimentos)
            {
                <tr>
                    <td>@recebimento.Id</td>
                    <td>@recebimento.Pedido</td>
                    <td>@recebimento.FormaPagamentoRec</td>
                    <td>@recebimento.Comprovante</td>
                    <td>@recebimento.ClienteRec</td>
                </tr>

                contador++;
            }
        }
    </tbody>
</table>

@code {
    private List<Recebimento> listaRecebimentos = new();

    protected override void OnInitialized()
    {
        CarregarDados();
    }

    private void CarregarDados()
    {
        listaRecebimentos = recebimentoDAO.listarTodos();
    }

}

