@page "/funcionarios/{Id:int}/editar"
@rendermode InteractiveServer

@using AppWeb.Models;
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations

@inject FuncionarioDAO funcionarioDAO;
@inject NavigationManager Navigation;

<PageTitle>Atualizar Funcionário</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">
    Atualização de Funcionário - @funcionario.Nome
</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}

<div class="row">
    <div class="col">
        <EditForm Model="funcionario" OnValidSubmit="Salvar">

            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group mb-4">
                <label>Nome</label>
                <InputText @bind-Value="funcionario.Nome" class="form-control" placeholder="Nome completo do funcionário" />
                <ValidationMessage For="@(() => funcionario.Nome)" />
            </div>

            <div class="form-group mb-4">
                <label>Cargo</label>
                <InputText @bind-Value="funcionario.Cargo" class="form-control" placeholder="Cargo/Função" />
                <ValidationMessage For="@(() => funcionario.Cargo)" />
            </div>

            <div class="form-group mb-4">
                <label>Data de Nascimento</label>
                <InputText @bind-Value="funcionario.DataNasc" class="form-control" placeholder="Ex: DD/MM/AAAA" />
                <ValidationMessage For="@(() => funcionario.DataNasc)" />
            </div>

            <div class="form-group mb-4">
                <label>Email</label>
                <InputText @bind-Value="funcionario.Email" type="email" class="form-control" placeholder="email@exemplo.com" />
                <ValidationMessage For="@(() => funcionario.Email)" />
            </div>

            <div class="form-group mb-4">
                <label>Telefone</label>
                <InputText @bind-Value="funcionario.Telefone" type="tel" class="form-control" placeholder="Ex: (XX) XXXX-XXXX" />
                <ValidationMessage For="@(() => funcionario.Telefone)" />
            </div>

            <div class="form-group mb-4">
                <label>CPF</label>
                <InputText @bind-Value="funcionario.Cpf" class="form-control" placeholder="Apenas números" />
                <ValidationMessage For="@(() => funcionario.Cpf)" />
            </div>

            <div class="form-group mb-4">
                <label>CEP</label>
                <InputText @bind-Value="funcionario.Cep" class="form-control" placeholder="Ex: XXXXX-XXX" />
                <ValidationMessage For="@(() => funcionario.Cep)" />
            </div>

            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        </EditForm>
    </div>
</div>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }
    [SupplyParameterFromForm]
    private Funcionario funcionario { get; set; } = new();

    protected override void OnInitialized()
    {
        var _funcionario = funcionarioDAO.BuscarPorId(Id);

        if (_funcionario != null)
        {
            funcionario = _funcionario;
        }
        else
        {
            erro = "Funcionário não encontrado. ID: " + Id;
        }
    }

    private void Salvar()
    {
        try
        {
            funcionarioDAO.Atualizar(funcionario);

            Navigation.NavigateTo("/funcionarios");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao salvar o Funcionário: {ex.Message}";
        }
    }
}