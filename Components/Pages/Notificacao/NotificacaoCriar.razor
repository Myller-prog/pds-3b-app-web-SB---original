@page "/notificacao/novo"
@rendermode InteractiveServer

@using AppWeb.Models;
@inject NotificacaoDAO notificacaoDAO;
@inject NavigationManager Navigation;

<PageTitle>Notificação - Nova</PageTitle>


<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Nova Notificacao</h1>

@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}


@using AppWeb.Models;
@inject RecebimentoDAO recebimentoDAO;
@inject NavigationManager Navigation;

<PageTitle>Recebimento - Novo</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Novo Recebimento</h1>

@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}

<div class="row">
    <div class="col">
        <EditForm Model="_novoRecebimento" OnSubmit="Salvar">

            <div class="form-group mb-4">
                <label>Pedido</label>
                <input @bind-value="_novoRecebimento.Pedido" type="text" class="form-control" name="pedido" />
            </div>

            <div class="form-group mb-4">
                <label>Valor</label>
                <input @bind-value="_novoRecebimento.Valor" type="number" class="form-control" name="valor" />
            </div>

            <div class="form-group mb-4">
                <label>Forma de Pagamento</label>
                <input @bind-value="_novoRecebimento.FormaPagamentoRec" type="text" class="form-control" />
            </div>

            <div class="form-group mb-4">
                <label>Comprovante</label>
                <input @bind-value="_novoRecebimento.Comprovante" type="text" class="form-control" />
            </div>

            <div class="form-group mb-4">
                <label>Cliente</label>
                <input @bind-value="_novoRecebimento.ClienteRec" type="text" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        </EditForm>
    </div>
</div>

@code {
    private string? erro = null;
    private Recebimento _novoRecebimento = new();

    private void Salvar()
    {
        try
        {
            if (_novoRecebimento.Pedido is null || _novoRecebimento.Pedido == "")
            {
                throw new Exception(message: "O campo nome é obrigatório");
            }
            recebimentoDAO.Inserir(_novoRecebimento);
            Navigation.NavigateTo("/recebimentos");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }
}
