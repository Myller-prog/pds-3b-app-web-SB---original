@using AppWeb.Models;
@inject NotificacaoDAO notificacaoDAO;
@inject NavigationManager Navigation;

<PageTitle>Notificação - Nova</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Nova Notificacao</h1>

@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}

<div class="row">
    <div class="col">
        <EditForm Model="_novaNotificacao" OnSubmit="Salvar">

            <div class="form-group mb-4">
                <label>Pedido</label>
                <input @bind-value="_novaNotificacao.Pedido" type="text" class="form-control" name="NumeroPedido" />
            </div>

            <div class="form-group mb-4">
                <label>Valor</label>
                <input @bind-value="_novaNotificacao.Valor" type="number" class="form-control" name="valor" />
            </div>

            <div class="form-group mb-4">
                <label>Forma de Pagamento</label>
                <input @bind-value="_novaNotificacao.FormaPagamentoRec" type="text" class="form-control" />
            </div>

            <div class="form-group mb-4">
                <label>Comprovante</label>
                <input @bind-value="_novaNotificacao.Comprovante" type="text" class="form-control" />
            </div>

            <div class="form-group mb-4">
                <label>Cliente</label>
                <input @bind-value="_novaNotificacao.ClienteRec" type="text" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        </EditForm>
    </div>
</div>

@code {
    private string? erro = null;
    private Recebimento _novaNotificacao = new();

    private void Salvar()
    {
        try
        {
            if (_novaNotificacao.Pedido is null || _novaNotificacao.Pedido == "")
            {
                throw new Exception(message: "O campo nome é obrigatório");
            }
            notificacaoDAO.Inserir(_novaNotificacao);
            Navigation.NavigateTo("/recebimentos");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }
}
