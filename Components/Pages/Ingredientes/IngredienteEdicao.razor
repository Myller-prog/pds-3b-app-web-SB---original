@page "/ingredientes/{Id:int}/editar"
@rendermode InteractiveServer

@using AppWeb.Models;
@inject IngredientesDAO ingredientesDAO;
@inject NavigationManager Navigation;

<PageTitle>Ingredientes</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Atualização Ingredientes - @ingrediente.Nome</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}

<EditForm Model="ingrediente" OnSubmit="Salvar">
    <div class="mb-4">
        <label for="nome" class="block text-sm font-medium text-gray-700">Nome</label>
        <input @bind-value="ingrediente.Nome" type="text" id="nome"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="quantidade" class="block text-sm font-medium text-gray-700">Quantidade</label>
        <input @bind-value="ingrediente.Quantidade" type="number" id="quantidade"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="descricao" class="block text-sm font-medium text-gray-700">Descrição</label>
        <textarea id="descricao"
                  class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">@ingrediente.Descricao</textarea>
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Salvar</button>
</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Ingredientes ingrediente { get; set; } = new();

    protected override void OnInitialized()
    {
        var _ingredientes = ingredientesDAO.BuscarPorId(Id);

        if (_ingredientes != null)
        {
            ingrediente = _ingredientes;
        }
        else
        {
            erro = "ingrediente não encontrado.";
        }
    }

    private void Salvar()
    {
        try
        {
            ingredientesDAO.Atualizar(ingrediente);

            Navigation.NavigateTo("/ingredientes");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao salvar o ingrediente: {ex.Message}";
        }
        ;

        Navigation.NavigateTo(uri: "/ingredientes");
    }
}