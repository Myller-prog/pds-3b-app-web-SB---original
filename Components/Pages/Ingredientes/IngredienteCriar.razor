@page "/ingredientes/novo"
@rendermode InteractiveServer
@using AppWeb.Models;
@inject IngredientesDAO ingredientesDAO;
@inject NavigationManager Navigation;
@using AppWeb.Configs


<PageTitle>Ingrediente - Novo</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Novo ingredientes</h1>
@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}

<div class="row">
    <div class="col">
        <EditForm Model="_novoIngrediente" OnSubmit="Salvar">
            <div class="form-group mb-4">
                <label>Nome</label>
                <input @bind-value="_novoIngrediente!.Nome" type="text" class="form-control" name="nome"
                       placeholder="Informe o nome do ingredientes" />
            </div>

            <div class="form-group mb-4">
                <label>Quantidade</label>
                <input @bind-value="_novoIngrediente!.Quantidade" type="text" class="form-control" name="quantidade"
                       placeholder="Informe a quantidade de ingredientes" />
            </div>

            <div class="form-group mb-4">
                <label>Descricão</label>
                <textarea class="form-control" rows="5">@_novoIngrediente!.Descricao</textarea>
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>


        </EditForm>
    </div>
</div>

@code {

    private string? erro = null;
    [SupplyParameterFromForm]
    private Ingredientes? _novoIngrediente { get; set; } = new Ingredientes();

    private void Salvar()
    {

        try
        {
            if (_novoIngrediente.Nome is null || _novoIngrediente.Nome == "")
            {
                throw new Exception(message: "O campo nome é obrigatório");
            }

            ingredientesDAO.Inserir(_novoIngrediente);
            Navigation.NavigateTo(uri: "/ingredientes");

        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }

   

    private List<Ingredientes> listarIngrediente = new();
    private List<Ingredientes> CadastrarIngrediente = new();

    protected override void OnInitialized()
    {
        CarregarDados();
    }

    private void CarregarDados()
    {
        listarIngrediente = ingredientesDAO.listarTodos();
        CadastrarIngrediente = ingredientesDAO.cadastrarIngrediente();
    }



}
